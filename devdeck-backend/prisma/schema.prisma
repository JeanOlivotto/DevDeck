generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id                 Int           @id @default(autoincrement())
  email              String        @unique
  name               String
  password           String
  discordWebhook     String?       @db.VarChar(255)
  createdAt          DateTime      @default(now())
  updatedAt          DateTime      @updatedAt
  notifyDailySummary Boolean       @default(true)
  notifyStaleTasks   Boolean       @default(true)
  boards             Board[]
  groupMembers       GroupMember[]
  groupsOwned        Group[]       @relation("groupOwner")
  assignedTasks      Task[]

  @@map("users")
}

model Board {
  id        Int      @id @default(autoincrement())
  name      String
  order     Int      @default(0)
  type      String   @default("personal")
  userId    Int?
  groupId   Int?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  group     Group?   @relation(fields: [groupId], references: [id], onDelete: Cascade)
  user      User?    @relation(fields: [userId], references: [id], onDelete: Cascade)
  tasks     Task[]

  @@unique([name, userId, groupId])
  @@index([userId], map: "boards_userId_fkey")
  @@index([groupId], map: "boards_groupId_fkey")
  @@map("boards")
}

model Group {
  id          Int           @id @default(autoincrement())
  name        String
  description String?
  createdBy   Int
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  boards      Board[]
  members     GroupMember[]
  owner       User          @relation("groupOwner", fields: [createdBy], references: [id], onDelete: Cascade)

  @@index([createdBy], map: "groups_createdBy_fkey")
  @@map("groups")
}

model GroupMember {
  id           Int      @id @default(autoincrement())
  groupId      Int
  userId       Int
  role         String   @default("member")
  inviteStatus String   @default("pending")
  joinedAt     DateTime @default(now())
  updatedAt    DateTime @updatedAt
  group        Group    @relation(fields: [groupId], references: [id], onDelete: Cascade)
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([groupId, userId])
  @@index([groupId], map: "group_members_groupId_fkey")
  @@index([userId], map: "group_members_userId_fkey")
  @@map("group_members")
}

model Task {
  id             Int       @id @default(autoincrement())
  title          String
  description    String?
  status         String    @default("TODO")
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  boardId        Int
  assignedUserId Int?
  subtasks       Subtask[]
  assignedUser   User?     @relation(fields: [assignedUserId], references: [id])
  board          Board     @relation(fields: [boardId], references: [id], onDelete: Cascade)

  @@index([boardId], map: "tasks_boardId_fkey")
  @@index([assignedUserId], map: "tasks_assignedUserId_fkey")
  @@map("tasks")
}

model Subtask {
  id        Int      @id @default(autoincrement())
  title     String
  completed Boolean  @default(false)
  taskId    Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  task      Task     @relation(fields: [taskId], references: [id], onDelete: Cascade)

  @@index([taskId], map: "subtasks_taskId_fkey")
  @@map("subtasks")
}
