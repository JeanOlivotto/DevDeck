generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id                        Int             @id @default(autoincrement())
  email                     String          @unique
  name                      String
  password                  String
  whatsappNumber            String?
  notifyViaWhatsApp         Boolean         @default(false)
  whatsappSession           String?
  createdAt                 DateTime        @default(now())
  updatedAt                 DateTime        @updatedAt
  notifyDailySummary        Boolean         @default(true)
  notifyStaleTasks          Boolean         @default(true)
  whatsappMetaPhoneNumberId String?
  whatsappMetaAccessToken   String?
  whatsappMessagesThisMonth Int             @default(0)
  whatsappMonthResetDate    DateTime?
  boards                    Board[]
  groupsOwned               Group[]         @relation("groupOwner")
  groupMembers              GroupMember[]

  @@map("users")
}

model Board {
  id        Int       @id @default(autoincrement())
  name      String
  order     Int       @default(0)
  type      String    @default("personal")
  userId    Int?
  user      User?     @relation(fields: [userId], references: [id], onDelete: Cascade)
  groupId   Int?
  group     Group?    @relation(fields: [groupId], references: [id], onDelete: Cascade)
  tasks     Task[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@unique([name, userId, groupId])
  @@index([userId], map: "boards_userId_fkey")
  @@index([groupId], map: "boards_groupId_fkey")
  @@map("boards")
}

model Group {
  id          Int           @id @default(autoincrement())
  name        String
  description String?
  createdBy   Int
  owner       User          @relation("groupOwner", fields: [createdBy], references: [id], onDelete: Cascade)
  members     GroupMember[]
  boards      Board[]
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  @@index([createdBy], map: "groups_createdBy_fkey")
  @@map("groups")
}

model GroupMember {
  id           Int      @id @default(autoincrement())
  groupId      Int
  group        Group    @relation(fields: [groupId], references: [id], onDelete: Cascade)
  userId       Int
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  role         String   @default("member")
  inviteStatus String   @default("pending")
  joinedAt     DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@unique([groupId, userId])
  @@index([groupId], map: "group_members_groupId_fkey")
  @@index([userId], map: "group_members_userId_fkey")
  @@map("group_members")
}

model Task {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  status      String   @default("TODO")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  boardId     Int
  board       Board    @relation(fields: [boardId], references: [id], onDelete: Cascade)

  @@index([boardId], map: "tasks_boardId_fkey")
  @@map("tasks")
}
